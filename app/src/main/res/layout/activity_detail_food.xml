<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.trungnguyeen.exerciseweek89_recyclerview_internetimage_multilayout.view.DetailFoodActivity">


    <ImageView
        android:id="@+id/imgFood"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:src="@drawable/banhcanh"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/tv_foodname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Ten mon an"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/imgFood"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/tv_foodprice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Ten mon an"
        android:textSize="20sp"
        android:textStyle="normal"
        app:layout_constraintTop_toBottomOf="@id/tv_foodname"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="5dp"/>

</android.support.constraint.ConstraintLayout>
